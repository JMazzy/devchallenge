<!DOCTYPE html>
<html>
  <head>
    <title>Devchallenge</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <header>
      <%= render partial: "shared/navbar" %>
    </header>

    <main class="container">
      <% flash.each do |key, message| %>
        <div class="alert alert-<%= key %>">
          <%= message %>
        </div>
      <% end %>

      <%= yield %>
    </main>

  </body>
</html>
